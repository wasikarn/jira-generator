        direction TB
        IC_TK["TakeoverSchedule<br/>Aggregate"]
        IC_ET["ExactTimeSpot<br/>Aggregate"]
        IC_CTRL["InterruptController<br/>Aggregate"]
        IC_MG["MakeGoodRecord<br/>Aggregate"]
        IC_TK e7@--> IC_CTRL
